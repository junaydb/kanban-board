{
  "name": "kanban-board",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/main/index.ts",
    "start": "node ./dist/src/main/index.js",
    "check": "npx tsc --noEmit --strict",
    "seed-db": "psql -U postgres -d kanban_board -f seed_db.sql",
    "seed-test-db": "psql -U postgres -d kanban_board_test -f seed_db.sql",
    "drop-test-db": "dropdb -U postgres kanban_board_test",
    "test:integration": "createdb -U postgres kanban_board_test && npx drizzle-kit push && pnpm seed-test-db && vitest integration --run && pnpm drop-test-db"
  },
  "dependencies": {
    "@trpc/server": "^11.4.4",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "better-auth": "^1.3.6",
    "chalk": "^5.6.2",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.4",
    "express": "^4.21.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/node": "^20.19.11",
    "@types/pg": "^8.15.5",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
