{
  "name": "kanban-board",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main/index.ts",
    "test": "vitest",
    "test:unit": "vitest unit --run",
    "test:integration": "vitest integration run",
    "init-db": "createdb -U postgres kanban_board && psql -U postgres -d kanban_board -f init_db.sql",
    "seed-db": "psql -U postgres -d kanban_board -f seed_db.sql",
    "init-test-db": "createdb -U postgres kanban_board_test && psql -U postgres -d kanban_board_test -f init_test_db.sql",
    "seed-test-db": "psql -U postgres -d kanban_board_test -f seed_test_db.sql",
    "drop-test-db": "dropdb -U postgres kanban_board_test"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/trpc-server": "^0.4.0",
    "@pgtyped/runtime": "^2.4.2",
    "@trpc/server": "^11.4.4",
    "hono": "^4.7.6",
    "pg": "^8.14.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@pgtyped/cli": "^2.4.3",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.12",
    "dotenv": "^16.5.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
