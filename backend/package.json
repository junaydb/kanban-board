{
  "name": "kanban-board",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/main/index.ts",
    "start": "node ./dist/src/main/index.js",
    "check": "npx tsc --noEmit --strict",
    "test": "vitest",
    "test:unit": "vitest unit --run",
    "test:integration": "vitest integration run",
    "seed-db": "psql -U postgres -d kanban_board -f seed_db.sql",
    "seed-test-db": "psql -U postgres -d kanban_board_test -f seed_db.sql",
    "drop-test-db": "dropdb -U postgres kanban_board_test"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.2",
    "@hono/trpc-server": "^0.4.0",
    "@trpc/server": "^11.4.4",
    "better-auth": "^1.3.6",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.2",
    "pg": "^8.16.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/pg": "^8.15.5",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
